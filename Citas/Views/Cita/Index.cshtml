@model IEnumerable<Citas.Models.Cita>;
@{ 
    ViewData["Title"] = "Index";
}

<h2>Citas pendientes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Agregar</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Informacion</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-striped" id="mytable">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.cliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.medico)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hora)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.medico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hora)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdCita" class="btn btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.IdCita" class="btn btn-danger">Eliminar</a>
                                <a asp-action="Finalizar" asp-route-id="@item.IdCita" class="btn btn-primary">Finalizar</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>